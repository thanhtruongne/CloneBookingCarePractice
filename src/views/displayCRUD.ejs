<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css"
    />
    <title>Document</title>
  </head>
  <body>
    
    <table border="1" style="width: 100%">
      <tr>
        <th>Email</th>
        <th>FirstName</th>
        <th>LastName</th>
        <th>gender</th>
        <th>address</th>
        <th>roleId</th>
        <td>Actions</td>
      </tr>
      <% for(let i=0; i < dataTablet.length; i++) { %>
        <tr>
        <td><%= dataTablet[i].email %></td>
        <td><%= dataTablet[i].firstName %></td>
        <td><%= dataTablet[i].lastName %></td>
        <td><%= dataTablet[i].address %></td>
        <td><%= dataTablet[i].gender %></td>
        <td><%= dataTablet[i].roleId %></td>
        <td>
          <a class="btn-Edit" href="/CRUD/edit-crud?id=<%= dataTablet[i].id %>"
            >Edit</a
          >

          <a
            data-id="<%= dataTablet[i].id %>"
            class="btn-Delete"
            href="/CRUD/<%= dataTablet[i].id %>"
            >Delete</a
          >
        </td>
      </tr>
      <% } %>
    </table>

    <form name="delete-course" method="POST"></form>
    
    <script>
      document.addEventListener("DOMContentLoaded", function() {
        const formNameDelete = document.forms['delete-course'];
        const BtnDeleteCoures = $('.btn-Delete');
         console.log(BtnDeleteCoures)
        let CouresId;

        $('.btn-Delete').on('click', function(e) {
            e.preventDefault();
            CouresId = e.target.dataset.id;
            formNameDelete.action = '/CRUD/' + CouresId +'?_method=DELETE';
            formNameDelete.submit();
        })
        





      })
    </script>
    <!-- jQuery library -->
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.4/dist/jquery.slim.min.js"></script>

    <!-- Popper JS -->
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>

    <!-- Latest compiled JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
